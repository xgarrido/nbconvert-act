{%- extends 'lab/index.html.j2' -%}

{%- block html_head_css -%}
  {{ super() }}
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Acme&display=swap');
    @font-face {
      font-family: 'Acme';
      font-style: normal;
      font-weight: 400;
    }
    h1, h2, h3 {
      font-family: "Acme", sans-serif
    }
    .header {
      overflow: hidden;
      background-color: #E5E5E5;
      color: #696969;
      font-family: "Acme", sans-serif;
      font-size: 40px;
    }
    .header p {
      padding-top: 10px;
    }
    .logo-container {
      margin: auto;
      width: fit-content;
      float: left;
      padding-top: 10px;
      padding-right: 10px;
    }
  </style>
{%- endblock html_head_css -%}

{% block body_header %}
  <body class="jp-Notebook theme-light" style="padding: 0; margin: 0;">
  <div class="header">
    <div class="logo-container">
      {% include 'actpol_logo.svg' %}
    </div>
    {% set nb_title = nb.metadata.get("title", "") or resources["metadata"]["name"] %}
    <p>{{nb_title}}</p>
    {% if "authors" in nb.metadata %}
      <p style="font-size:50%">{{nb.metadata.authors | join(', ', attribute='name')}}</p>
    {% endif %}
  </div>
  <div style="padding: 20px; margin: 20px;">
{% endblock body_header %}

{% block body_footer %}
  </div>
  </body>
{% endblock body_footer %}
